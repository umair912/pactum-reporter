pipeline {
  agent any
  environment {
      CI = 'true' 
  }
  //triggers{
    //cron('H H(8-16)/2 * * 1-5') 
  //}
  // triggers{ cron('H/15 * * * *') }
  stages {
    stage('Setup NODE Environment') {
      steps {
        sh '''#!/bin/bash +x
          set -o errexit

          curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.35.3/install.sh | bash
          source ~/.nvm/nvm.sh
          nvm install 14.0.0
          npm ci
          npm run test
        '''
      }
    }
  }
}
